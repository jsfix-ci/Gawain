{
  "name": "gawain",
  "version": "1.0.1",
  "description": "React Autocomplete",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "assets/*.less",
    "es",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YagamiLight126/Gawain.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "rx:mock": "node ./examples/mock/server.js",
    "test": "jest",
    "build:esm": "rm -rf es && tsc --module es2015 --outDir es --declarationDir es",
    "build:cjs": "rm -rf lib && tsc --module CommonJS --outDir lib --declarationDir lib",
    "build": "npm run build:esm && npm run build:cjs",
    "start": "start-storybook -p 1231",
    "lint": "npm run lint:script  && npm run lint:style",
    "lint:script": "eslint . --ext '.js,.jsx,.ts,.tsx'",
    "lint:style": "prettier --write src/**",
    "build-storybook": "build-storybook"
  },
  "author": "FuZhiCheng",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@storybook/addon-actions": "^6.2.2",
    "@storybook/addon-essentials": "^6.2.2",
    "@storybook/addon-links": "^6.2.2",
    "@storybook/react": "^6.2.2",
    "@testing-library/react": "^11.2.6",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-alloy": "^3.10.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "json-server": "^0.16.3",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint --fix",
    "*.{js,css,md,ts,tsx}": "prettier --write",
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
